<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/edit_dialog_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:text="@string/placeholder_widget_name_text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_dialog_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_dialog_name_text_view"
        android:padding="8dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/edit_dialog_pin_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edit_dialog_name_edit_text"
        android:padding="8dp"
        android:text="@string/placeholder_widget_pin_text"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edit_dialog_pin_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_dialog_pin_text_view"
        android:padding="8dp"
        android:inputType="text"/>

</RelativeLayout>