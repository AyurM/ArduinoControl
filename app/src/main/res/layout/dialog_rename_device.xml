<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ui_menu_rename_device_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/dialog_rename_device_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="@string/ui_menu_device_name_hint_text"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/rename_device_empty_name_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ui_menu_empty_device_name_error_text"
        android:textColor="@color/colorDrawerText"
        android:fontFamily="@font/open_sans"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:textSize="18sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="16dp"
        >

        <Button
            android:id="@+id/rename_device_cancel_button"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            android:text="@string/ui_cancel_text"
            style="@style/EditWidgetButton"/>

        <Button
            android:id="@+id/rename_device_ok_button"
            android:text="@string/ui_ok_text"
            style="@style/EditWidgetButton"/>

    </LinearLayout>

</LinearLayout>